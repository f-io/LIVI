# .husky/pre-commit

echo "ğŸ” Running Prettier + Jest tests before commit..."

npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed, aborting commit."
  exit 1
fi

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$')

if [ -z "$STAGED_FILES" ]; then
  echo "No testable files staged. Skipping Jest."
  exit 0
fi

echo "ğŸ§ª Running related Jest tests..."
npx jest --config jest.web.config.js --bail --findRelatedTests $STAGED_FILES --maxWorkers=2 --silent

if [ $? -ne 0 ]; then
  echo "âŒ Tests failed, aborting commit."
  exit 1
fi

echo "âœ… All checks passed!"
